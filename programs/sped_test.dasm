; map vertices
set A, 1
set X, vertices
set Y, 17
hwi 2

; rotate 180 degrees
set X, 180
set A, 2
hwi 2

; halt
sub PC, 1

:vertices
; base of cube
dat 0x0000, 0x0200
dat 0x00FF, 0x0200
dat 0xFFFF, 0x0200
dat 0xFF00, 0x0200
dat 0x0000, 0x0200
; top of cube
dat 0x0000, 0x02FF
dat 0x00FF, 0x02FF
dat 0xFFFF, 0x02FF
dat 0xFF00, 0x02FF
dat 0x0000, 0x02FF
; +x, then down
dat 0xFF00, 0x02FF
dat 0xFF00, 0x0200
; +y, then up
dat 0xFFFF, 0x0200
dat 0xFFFF, 0x02FF
; -x, then down
dat 0x00FF, 0x02FF
dat 0x00FF, 0x0200
; -y to origin
dat 0x0000, 0x0200
